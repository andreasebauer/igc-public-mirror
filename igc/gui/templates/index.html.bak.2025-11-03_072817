    <div class="actions-left"></div>
    <div class="actions-right">
      <a id="entryNext" class="btn btn--primary btn--lg is-disabled" aria-disabled="true">Next</a>
    </div>
  </div>
</footer>

<script>
(function(){
  const next = document.getElementById('entryNext');
  const choices = Array.from(document.querySelectorAll('.btn-choice'));
  function select(btn){
    choices.forEach(b => b.classList.remove('selected'));
    btn.classList.add('selected');
    const dest = btn.getAttribute('data-dest');
    next.href = dest;
    next.classList.remove('is-disabled');
    next.setAttribute('aria-disabled','false');
  }
  choices.forEach(btn => {
    btn.addEventListener('click', (e) => { e.preventDefault(); select(btn); });
  });
})();
</script>
{% endblock %}
