/* Left cell with inline label+input: define stable widths and top alignment */
.igc-inline{
  display:flex; align-items:flex-start; gap:12px;
  max-width: 100%;
}
.igc-name{
  min-width: 180px; max-width: 220px; /* fixed label column */
