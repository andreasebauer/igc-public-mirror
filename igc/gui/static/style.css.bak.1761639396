/* Layout helpers used on all pages */
.wrap{max-width:1100px;margin:0 auto;padding:24px;}
.header{display:grid;grid-template-columns:1fr 1fr;gap:24px;margin-bottom:24px;}
.header h1{margin:0;}
.card{border:1px solid var(--border);border-radius:12px;padding:16px;}
.matrix{display:grid;grid-template-columns:1fr 1fr;row-gap:18px;column-gap:28px;align-items:start;}
.stack{display:grid;row-gap:12px;}
.actions{display:grid;grid-template-columns:1fr 1fr;column-gap:28px;align-items:center;margin-top:18px;}
.actions-left{text-align:left;}
.actions-right{text-align:right;}

/* ====================================================================== */
/* === IGC Buttons & Layout (reinforcements) ============================= */

/* Make sure anchors ALSO get the same font and layout as buttons */
a.btn, button.btn { font: var(--btn-font); display: inline-flex; align-items: center; justify-content: center; }

/* Base button refinements */
.btn{
  box-sizing: border-box;
  line-height: 1.15;
}

/* Mode buttons inside cards: always full width (not text-dependent) */
.card .btn,
.btn-block{
  display: block;
  width: 100%;
}

/* Cards with actions: equal heights so columns align */
.card.card--action{
  display: grid;
  grid-template-rows: auto 1fr;
  min-height: 140px; /* tweak if you want denser */
}

/* Footer Back/Next: equal visual mass */
.actions .btn{
  width: 100%;
  max-width: 240px;    /* identical width */
}

/* Ensure the two footer columns keep buttons at the edges */
.actions{ display:grid; grid-template-columns:1fr 1fr; column-gap:28px; align-items:center; margin-top:18px }
.actions-left{ text-align:left }
.actions-right{ text-align:right }

/* ====================================================================== */

/* === IGC: Action cards as two-column rows (button left, description right) === */

/* Each action card spans the full matrix width (one row per action) */
.matrix .card--action{ grid-column: 1 / -1; }

/* Inside an action card, make a 2-col grid: fixed button col + flexible text col */
.card.card--action{
  display: grid;
  grid-template-columns: minmax(220px, 320px) 1fr;
  align-items: center;
  column-gap: 18px;
  row-gap: 8px; /* if something wraps */
  min-height: unset; /* override any earlier equal-height rule */
  padding: 16px; /* keep your existing card padding */
}

/* Ensure the button occupies the left column and fills that column width */
.card.card--action > .btn{
  grid-column: 1;
  width: 100%;
  max-width: none; /* ensure full width of the left column */
}

/* Descriptions (p, small, etc.) go to the right column and donâ€™t crowd */
.card.card--action > p,
.card.card--action > small,
.card.card--action > div{
  grid-column: 2;
  margin: 0;
}

/* Optional: tone down description text a bit (reuse your .muted if present) */
.card.card--action > p{ color: inherit; }
.card.card--action > .muted{ color: #444; }

/* Mobile: stack on very narrow screens */
@media (max-width: 640px){
  .card.card--action{
    grid-template-columns: 1fr;
  }
  .card.card--action > .btn{ grid-column: 1; }
  .card.card--action > p,
  .card.card--action > small,
  .card.card--action > div{ grid-column: 1; margin-top: 8px; }
}

/* =========================================================================== */

/* === IGC: Simulation Start two-column matrix layout ===================== */

/* The whole grid: 2 columns, buttons left / descriptions right */
.matrix{
  display: grid;
  grid-template-columns: minmax(260px, 320px) 1fr;
  column-gap: 28px;
  row-gap: 18px;
  align-items: start;
}

/* Each card spans one row, no border stacking */
.matrix .card{
  display: contents; /* let button + text occupy grid cells directly */
}

/* Button occupies left column */
.matrix .card > .btn{
  grid-column: 1;
  justify-self: stretch;
  width: 100%;
}

/* Description occupies right column, top-aligned */
.matrix .card > p,
.matrix .card > div,
.matrix .card > small{
  grid-column: 2;
  margin: 0;
  align-self: start;
}

/* Optional visual separators between rows */
.matrix::before, .matrix::after {content:none;}
/* ======================================================================= */
